<!--pages/mine/mine.wxml-->
<view class="top-background">
  <view>
    <view class="background-img">
      <open-data class="tx-img" type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class = 'username'><open-data type="userNickName" lang="zh_CN"></open-data></view>
</view>

<view class='strip-title' bindtap='LinkTonews'>
  <view class='head-por'>
    <image src='../../imgs/news.png' style='height:60rpx;width:60rpx;' />
    <image src='../../imgs/uread.png' style='height:20rpx;width:20rpx;position:absolute;left:75rpx;margin-top:-15rpx;' hidden='{{hidden}}'/>
  </view>
  <view class='headline'>
    <text class='headedit'>我的消息</text>
    <image src='../../imgs/arrows.png' style='height:60rpx;width:60rpx;'/>
  </view>
</view>

<view class='strip-title' bindtap='LinkToqanda'>
  <view class='head-por'>
    <image src='../../imgs/quetion.png' style='height:60rpx;width:60rpx;' />
  </view>
  <view class='headline'>
    <text class='headedit'>我的问答</text>
    <image src='../../imgs/arrows.png' style='height:60rpx;width:60rpx;'/>
  </view>
</view>
<view class='strip-title' bindtap='LinkToreads'>
  <view class='head-por'>
    <image src='../../imgs/read.png' style='height:60rpx;width:60rpx;' />
  </view>
  <view class='headline'>
    <text class='headedit'>阅读记录</text>
    <image src='../../imgs/arrows.png' style='height:60rpx;width:60rpx;'/>
  </view>
</view>
<view class='strip-title' bindtap='LinkTocollect'>
  <view class='head-por'>
    <image src='../../imgs/collec.png' style='height:60rpx;width:60rpx;' />
  </view>
  <view class='headline'>
    <text class='headedit'>我的收藏</text>
    <image src='../../imgs/arrows.png' style='height:60rpx;width:60rpx;'/>
  </view>
</view>



