page{
  height:100%;
  width:100%;
}
.swiper-tab{ 
  height: 8%;
  width:100%;
  display: flex;
  flex-direction: row;
  border-bottom:4rpx solid #eeeeee;
  text-align: center;
} 

.swiper-tab-item{ 
  display: inline-block;  
  width: 50%; 
  padding-top: 25rpx;
  font-size:36rpx; 
} 
.on{ color: #DE3344; 
  border-bottom: 5rpx solid #DE3344;} 
  

.que-global{
  width:100%;
  height:auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quetioner{
  height:auto;
  width:100%;
  margin-top:20rpx;
  display:flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  
}
.quetion-infomatin{
  height:110rpx;
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  border-bottom:10rpx solid #FFFFFF;
}
.quetion-name-time{
  height:auto;
  width:400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left:40rpx;
}
.cards{
  height:auto;
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom:18rpx solid #EEEEEE;
}
.cards:last-child{
  border-bottom:0rpx;
}
.que-card{
  width:690rpx;
  height:auto;
}
.answer-module{
  width:100%;
  height:auto;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.anwser-card{
  border-bottom:1rpx solid #EEEEEE;
}
.anwser-card:last-child{
  border-bottom:0rpx;
}
.question-detail{
  width:690rpx;
  font-size:34rpx;
  background-color: #EEEEEE;
}