  flex-direction: column;
  align-items: center;
}

.quetioner{
  height:auto;
  width:100%;
  margin-top:20rpx;
  display:flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  
}
.quetion-infomatin{
  height:110rpx;
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  border-bottom:10rpx solid #FFFFFF;
}
