/* pages/comp/school/school.wxss */
page{
  height:100%;
  width:100%;
}
.search-card{
  height:8%;
  width:100%;
  background-color: #DE3344;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.search-background{
  height:70%;
  width:80%;
  background-color: #FFFFFF;
  border:1rpx solid #FFFFFF;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
   align-items: center; 
  filter:opacity(80%);
}
.search-write{
  margin-left:30rpx;
  height:55rpx;
  width:400rpx;
}

.sch-global{
  height:auto;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.school-list{
  height:180rpx;
  width:720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #EEEEEE;
}
.include{
  height:179rpx;
  width:720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.school-list:last-child{
  border-bottom:0rpx;
}
.school-detail{
  margin-left:30rpx;
  display: flex;
  flex-direction: column;
}