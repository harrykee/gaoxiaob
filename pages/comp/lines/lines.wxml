<!--pages/comp/lines/lines.wxml-->

<view class="tab">
  <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">文科</view>
  <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">理科</view>
</view>

<view hidden='{{isArtShow}}' class='canvas-box'>
  <canvas canvas-id="columnCanvas" class="canvas"></canvas>
</view>

<view hidden='{{isSciShow}}' class='canvas-box'>
  <canvas canvas-id="lineCanvas" class="canvas"></canvas>
</view>

<view class="swiper-tab">
  <view class="swiper-tab-list {{convertTab==0 ? 'ons' : ''}}" data-current="0" bindtap="swichTab">2017</view>
  <view class="swiper-tab-list {{convertTab==1 ? 'ons' : ''}}" data-current="1" bindtap="swichTab">2016</view>
  <view class="swiper-tab-list {{convertTab==2 ? 'ons' : ''}}" data-current="2" bindtap="swichTab">2015</view>
  <view class="swiper-tab-list {{convertTab==3 ? 'ons' : ''}}" data-current="3" bindtap="swichTab">2014</view>
  <view class="swiper-tab-list {{convertTab==4 ? 'ons' : ''}}" data-current="4" bindtap="swichTab">2013</view>
  <view class="swiper-tab-list {{convertTab==5 ? 'ons' : ''}}" data-current="5" bindtap="swichTab">2012</view>
</view>

<view class='score-table'>
  <view class='th'>
    <view class='td'>年份</view>
    <view class='td'>生源地</view>
    <view class='td'>文理分科</view>
    <view class='td' style='width:190rpx;'>录取批次</view>
    <view class='td'>控制线</view>
  </view>
  <view class='tr' wx:for="{{enroll}}" wx:key="key">
    <view class='td'>{{item.enyear}}</view>
    <view class='td'>{{item.batch}}</view>
    <view class='td'>{{item.highest}}</view>
    <view class='td'style='width:190rpx;'>{{item.lowest}}</view>
    <view class='td'>{{item.average}}</view>
  </view>
</view>