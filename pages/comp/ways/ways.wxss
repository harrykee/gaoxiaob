/* pages/comp/ways/ways.wxss */
page{
  height:100%;
  width:100%;
}
.search-background{
  height:24%;
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color: #E6E6E6;
}
.search-label{
  height:30%;
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  background-color: #E6E6E6;
  font-size:34rpx;
}
.heading{
  margin-left:20rpx;
  color: #2C2C2C;
}
.picker{
  margin-left:20rpx;
  width:200rpx;
  height:75%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border:1rpx solid #BFBFBF;
}
.picker view{
  height:75%;
  width:180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.school-search{
  height:60rpx;
  width:516rpx;
  border:1rpx solid #BFBFBF;
}
.search-chunk{
  z-index: 2;
  height:auto;
  width:520rpx;
  position: absolute;
  top:16%;
  left:20rpx;
}
.search-result{
  height: auto;
  width:520rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #FFF;
}
.search-value{
  height:40rpx;
  width:520rpx;
  font-size: 28rpx;

}

.search-button{
  position: absolute;
  top:16%;
  right:60rpx;
  height:60rpx;
  width:100rpx;
  display: flex;
  color: #FFFFFF;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #FEB62B;
  border:1rpx solid #FEB62B;
}
.th{
  height:8%;
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  background-color: #F4585B;
  font-size:26rpx;
}
.tr{
  height:70rpx;
  width:100%;
  display:flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}
.td{
  width:100rpx;
  color: #2C2C2C;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.tr:nth-child(ood){
  background-color: #FFFFFF;
}
.tr:nth-child(even){
  background-color: #EEEEEE;
}


.swiper-tab{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  /* text-align: center; */
} 

.swiper-tab-item{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;  
  width: 100rpx; 
  font-size:34rpx; 

} 
.on{ color: #FFFFFF; background-color: #F4585B;border-radius: 6rpx;} 